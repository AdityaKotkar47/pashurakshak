{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/volunteers/direct-profile",
            "dest": "server.js",
            "methods": ["GET"],
            "continue": true
        },
        {
            "src": "/api/volunteers/direct-missions",
            "dest": "server.js",
            "methods": ["GET"],
            "continue": true
        },
        {
            "src": "/api/volunteers/test",
            "dest": "server.js",
            "methods": ["GET"],
            "continue": true
        },
        {
            "src": "/api/volunteers/public-test",
            "dest": "server.js",
            "methods": ["GET", "OPTIONS"],
            "headers": {
                "Cache-Control": "no-cache, no-store, must-revalidate",
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Headers": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Origin, Authorization",
                "Access-Control-Allow-Methods": "GET, OPTIONS",
                "Access-Control-Allow-Credentials": "true",
                "X-Vercel-Skip-Bot-Detection": "true"
            }
        },
        {
            "src": "/api/volunteers/m-login",
            "dest": "server.js",
            "methods": ["POST", "OPTIONS"],
            "headers": {
                "Cache-Control": "no-cache, no-store, must-revalidate",
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Headers": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Origin, Authorization",
                "Access-Control-Allow-Methods": "POST, OPTIONS",
                "Access-Control-Allow-Credentials": "true",
                "X-Vercel-Skip-Bot-Detection": "true"
            }
        },
        {
            "src": "/api/volunteers/m-(.*)",
            "dest": "server.js",
            "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
            "headers": {
                "Cache-Control": "no-cache, no-store, must-revalidate",
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Headers": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Origin, Authorization",
                "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
                "Access-Control-Allow-Credentials": "true",
                "X-Vercel-Skip-Bot-Detection": "true"
            }
        },
        {
            "src": "/api/rescue/m-(.*)",
            "dest": "server.js",
            "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
            "headers": {
                "Cache-Control": "no-cache, no-store, must-revalidate",
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Headers": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Origin, Authorization",
                "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
                "Access-Control-Allow-Credentials": "true",
                "X-Vercel-Skip-Bot-Detection": "true"
            }
        },
        {
            "src": "/api/(.*)",
            "dest": "server.js",
            "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
            "headers": {
                "Cache-Control": "no-cache, no-store, must-revalidate",
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Headers": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Origin, Authorization",
                "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
                "Access-Control-Allow-Credentials": "true",
                "X-Vercel-Skip-Bot-Detection": "true"
            }
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/",
            "dest": "public/index.html"
        },
        {
            "src": "/favicon.ico",
            "dest": "public/favicon.ico"
        },
        {
            "src": "/(.*)",
            "dest": "server.js"
        }
    ],
    "env": {
        "NODE_ENV": "production",
        "DEBUG_AUTH": "true",
        "JWT_SECRET_LENGTH": "64"
    },
    "regions": ["iad1"],
    "public": false,
    "functions": {
        "server.js": {
            "memory": 1024,
            "maxDuration": 10
        }
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                { "key": "Access-Control-Allow-Credentials", "value": "true" },
                { "key": "Access-Control-Allow-Origin", "value": "*" },
                { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
                { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization, Origin" },
                { "key": "X-Vercel-Skip-Bot-Detection", "value": "true" }
            ]
        }
    ]
}